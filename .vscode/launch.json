	"version": "0.2.0",
	"configurations": [
		{
			"type": "lldb",
			"request": "launch",
			"name": "piston_game debug executable",
			"cargo": {
				"args": [
					"build",
					"--bin=piston_game",
					"--package=piston_game",
				],
				"filter": {
					"name": "piston_game",
					"kind": "bin",
				},
			},
			"args": [],
			"cwd": "${workspaceFolder}",
			"env": {
				"RUST_LOG": "error",
			},
		},
		{
			"type": "lldb",
			"request": "launch",
			"name": "Debug unit tests in executable 'piston_game'",
			"cargo": {
				"args": [
					"test",
					"--no-run",
					"--bin=piston_game",
					"--package=piston_game",
				],
				"filter": {
					"name": "piston_game",
					"kind": "bin",
				},
			},
			"args": [],
			"cwd": "${workspaceFolder}",
		},
	],
}